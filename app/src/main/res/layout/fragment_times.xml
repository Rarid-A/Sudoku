<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/difficulty_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:textColor="?attr/colorOnSurface"/>

    <TextView
        android:id="@+id/no_times_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No times recorded yet. Complete a puzzle to see your time here!"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="?attr/colorOnSurface"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/times_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/completed_games_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completed games: 0"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnSurface"/>

</LinearLayout> 