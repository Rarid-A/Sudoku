<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rarid.sudoku.SudokuBoardView
        android:id="@+id/sudoku_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hint_circles_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/hint_circles_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/sudoku_board"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hint Circles -->
        <View
            android:id="@+id/hint_circle_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="2dp"
            android:background="@drawable/hint_circle_unused" />
        <View
            android:id="@+id/hint_circle_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="2dp"
            android:background="@drawable/hint_circle_unused" />
        <View
            android:id="@+id/hint_circle_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="2dp"
            android:background="@drawable/hint_circle_unused" />
    </LinearLayout>

    <Button
        android:id="@+id/hint_button"
        style="@style/SudokuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Hint"
        android:textColor="#0D47A1"
        app:layout_constraintTop_toBottomOf="@id/hint_circles_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/action_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/hint_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/delete_button"
            style="@style/SudokuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:minWidth="100dp"
            android:minHeight="48dp"
            android:text="Delete"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/new_game_button"
            style="@style/SudokuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="120dp"
            android:minHeight="48dp"
            android:text="New Game"
            android:textColor="#0D47A1" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/number_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/action_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Number Buttons -->
        <Button
            android:id="@+id/num_1"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="1"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_2"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="2"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_3"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="3"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_4"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="4"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_5"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="5"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_6"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="6"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_7"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="7"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_8"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="8"
            android:textColor="#0D47A1" />

        <Button
            android:id="@+id/num_9"
            style="@style/SudokuButton"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:text="9"
            android:textColor="#0D47A1" />
    </GridLayout>

    <Button
        android:id="@+id/pencil_toggle"
        style="@style/SudokuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:minWidth="160dp"
        android:text="Pencilmark: OFF"
        android:textColor="#0D47A1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_pad"
        app:layout_constraintVertical_bias="0.636" />

</androidx.constraintlayout.widget.ConstraintLayout>