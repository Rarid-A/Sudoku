<resources>
    <style name="SudokuButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/zen_button</item>
        <item name="android:textColor">@color/zen_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SudokuButton.NumberPad" parent="SudokuButton">
        <item name="android:textColor">@android:color/black</item> <!-- Changed to black -->
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:backgroundTint">@color/zen_white</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>